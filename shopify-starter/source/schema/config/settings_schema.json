        "label": "Links",
        "default": "#354086"
      },
      {
        "type": "color",
        "id": "color_borders",
        "label": "Borders",
        "default": "#e5e5e5"
      },
      {
        "type": "color",
        "id": "color_progress_bar",
        "label": "Progress Bar",
        "default": "#000000"
      },
      {
        "type": "header",
        "content": "Header"
      },
      {
        "type": "color",
        "id": "color_header_bg",
        "label": "Background"
      },
      {
        "type": "color",
        "id": "color_header_link",
        "label": "Link",
        "default": "#111111"
      },
      {
        "type": "color",
        "id": "color_header_link_hover",
        "label": "Link Hover",
        "default": "#999999"
      },
      {
        "type": "header",
        "content": "Banner",
        "info": "Customize the header colors"
      },
      {
        "type": "color",
        "id": "color_banner_bg",
        "label": "Banner Background",
        "default": "#111111"
      },
      {
        "type": "color",
        "id": "color_banner_link",
        "label": "Text",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "color_banner_link_hover",
        "label": "Link Hover",
        "default": "#333333"
      },
      {
        "type": "header",
        "content": "Footer"
      },
      {
        "type": "color",
        "id": "color_footer_bg",
        "label": "Background",
        "default": "#f2f2f2"
      },
      {
        "type": "color",
        "id": "color_footer_text",
        "label": "Text",
        "default": "#636363"
      },
      {
        "type": "color",
        "id": "color_footer_social_link",
        "label": "Social media icons",
        "default": "#bbbbbb"
      }
    ]
  },
